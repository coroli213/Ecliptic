    <ShellContent Route="Войти в учтеную запись"
                  x:Name="userpage"
                  Style="{StaticResource UserShell}"
                  Title="Учетная запись"
                  Icon="info.png"
                  ContentTemplate="{DataTemplate user:Authorization  }" />

    <ShellContent Route="Сканировать"
                  x:Name="qrpage"
                  Style="{StaticResource QRShell}"
                  Title="Поиск по штрих-коду "
                  Icon="info.png"
                  ContentTemplate="{DataTemplate room:QrScan  }" />

    <ShellContent Route="About"
                  Style="{StaticResource AboutShell}"
                  Title="О приложении"
                  Icon="info.png"
                  ContentTemplate="{DataTemplate views:AboutPage}" />

    <MenuItem Text="Техподдержка"
              IconImageSource="help.png"
              Command="{Binding HelpCommand}"
              CommandParameter="https://vk.com/progksu" />

</Shell>